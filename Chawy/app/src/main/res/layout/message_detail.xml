<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/tosca"
        android:id="@+id/insideRelativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hehe"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/chatNameTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of t"
            android:layout_below="@id/chatNameTextView"
            android:id="@+id/messageTextView"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Media"
            android:layout_below="@id/messageTextView"
            android:layout_centerHorizontal="true"
            android:id="@+id/viewMediaButton"
            android:layout_marginTop="2dp"/>

    </RelativeLayout>

</RelativeLayout>