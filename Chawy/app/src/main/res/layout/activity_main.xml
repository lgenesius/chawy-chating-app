<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/face_recog_mobile"
        android:id="@+id/mainImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Sign In"
        android:id="@+id/signInTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue"
        android:text="Enter your Phone Number"
        android:textSize="24sp"
        android:layout_below="@id/signInTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins"
        android:id="@+id/enterPNTextView"/>

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterPNTextView"
        android:hint="Enter Phone Number"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/dark_blue"
        android:id="@+id/phoneNumberEditText"
        android:inputType="phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        android:text="Enter The Code"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="30dp"
        android:layout_below="@id/phoneNumberEditText"
        android:layout_centerHorizontal="true"
        android:id="@+id/enterCodeTextView"/>

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterCodeTextView"
        android:hint="Enter Verification Code"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/dark_blue"
        android:id="@+id/verificationCodeEditText"
        android:inputType="text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:layout_below="@id/verificationCodeEditText"
        android:background="@drawable/roundedbutton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:id="@+id/verifyButton"/>


</RelativeLayout>